[kvm_host]
# This is your KVM hypervisor / Ansible control node.
# If you are running this from your local Debian machine, leave this as 'localhost'.
# If you are running this from a separate control node targeting a remote KVM host,
# change 'localhost' to the IP/hostname of that KVM host.
localhost ansible_connection=local

[all:vars]
# Default user for Debian cloud images
ansible_user=debian
ansible_python_interpreter=/usr/bin/python3
ansible_ssh_private_key_file=~/.ssh/id_rsa # Ensure this key is in the VM!

[control_plane]
k8s-master ansible_host=192.168.122.10

[workers]
k8s-worker-1 ansible_host=192.168.122.11
k8s-worker-2 ansible_host=192.168.122.12

[k8s_cluster:children]
control_plane
workers